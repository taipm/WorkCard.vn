@model Web.Models.Contact

<div class="text-center card-box">
    <div class="dropdown pull-right">
        <a href="#" class="dropdown-toggle card-drop" data-toggle="dropdown" aria-expanded="false">
            <i class="zmdi zmdi-more-vert"></i>
        </a>
        <ul class="dropdown-menu" role="menu">
            <li><a href="#">Edit</a></li>
            <li><a href="#">Delete</a></li>
            <li><a href="#">Block</a></li>
        </ul>
    </div>
    <div class="row">
        <img src="assets/images/users/avatar-10.jpg" class="img-circle thumb-xl img-thumbnail m-b-10" alt="profile-image">
        <p class="text-muted font-13 m-b-30">
            @Html.Raw(Model.About)
        </p>
        <div class="text-left">
            <p class="text-muted font-13">
                <strong>Full Name :</strong> <span class="m-l-15">
                    @if (!Model.FirstName.IsNullOrEmptyOrWhiteSpace())
                    {
                        <span class="name">
                            @Model.LastName
                            @Html.Raw(" ")
                            @Model.FirstName
                        </span>
                    }
                </span>
            </p>
            <p class="text-muted font-13"><strong>Mobile : @Model.MobilePhone</strong>
            <p>
                Office: @Model.OfficeName
            </p>
            <p class="text-muted font-13"><strong>Email :</strong> 
                <span class="desc">@Model.Email</span>
            </p>
            <p>Đã tham gia: @Model.CreatedDate.Value.TimeAgo()</p>
            <p class="text-muted font-13"><strong>Địa chỉ :</strong> <span class="m-l-15">@Model.Address</span></p>
        </div>
        <button type="button" class="btn btn-custom btn-rounded waves-effect waves-light">Send Message</button>
    </div>
    <div class="comment-footer pull-right">
        @Html.ActionLink("Details", "Details", "Contacts", new { id = Model.Id }, 
                new { @class = "btn btn-custom btn-rounded waves-effect waves-light" })
        @Html.ActionLink("Delete", "Delete", "Contacts", new { id = Model.Id },
                null)
    </div>
</div>
