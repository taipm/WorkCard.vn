                    </p>
                    <p class="text-muted m-b-20"><i>@Model.CreatedBy</i></p>
                    <p>
                        @Html.Raw(Model.Content)
                    </p>
                    <div class="button-list m-t-20">
                        <button type="button" class="btn btn-facebook btn-sm waves-effect waves-light">
                            <i class="fa fa-facebook"></i>
                        </button>
