@model IEnumerable<Web.Models.Project>

@{
    ViewBag.Title = "Index";
}

<h2>Projects</h2>
<div class="row">
    <div class="col-sm-4">
        @Html.ActionLink("Create project", "Create", "Projects", null, new { @class= "btn btn-purple btn-rounded w-md waves-effect waves-light m-b-20" })
    </div>
    <div class="col-sm-8">
        <div class="project-sort pull-right">
            <div class="project-sort-item">
                <form class="form-inline">
                    <div class="form-group">
                        <label>Phase :</label>
                        <select class="form-control input-sm">
                            <option>All Projects(6)</option>
                            <option>Complated</option>
                            <option>Progress</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Sort :</label>
                        <select class="form-control input-sm">
                            <option>Date</option>
                            <option>Name</option>
                            <option>End date</option>
                            <option>Start Date</option>
                        </select>
                    </div>
                </form>
            </div>
        </div>
    </div><!-- end col-->
</div>
<!-- end row -->

<div class="row">
    @if (Model != null)
    {
        int _column = 3;
        foreach (var item in Model)
        {
            _column += 1;
            if (_column % 3 ==0)
            {
                <div class="row">
                    <div class="col-lg-4">
                        @Html.Partial("_ProjectItem", item)
                    </div><!-- end col-->
                </div>
            }
            else
            {
                <div class="col-lg-4">
                    @Html.Partial("_ProjectItem", item)
                </div><!-- end col-->
            }
        }
    }
</div>
<!-- end row -->